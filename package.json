{
    "name": "darker-engine-template",
    "description": "game template",
    "version": "1.0.0",
    "buildId": "1",
    "author": {
        "name": "pagoru",
        "email": "pagoru@gmail.com",
        "url": "https://github.com/pagoru"
    },
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "repository": "https://github.com/darkaqua/darker-engine-template",
    "build": {
        "appId": "net.darkaqua",
        "files": [
            "build/**/*",
            "package.json"
        ],
        "win": {
            "target": [
                "portable"
            ],
            "icon": "icons/icon.ico"
        },
        "mac": {
            "category": "public.app-category.games",
            "icon": "icons/icon.icns"
        },
        "linux": {
            "target": {
                "target": "tar.gz",
                "arch": [
                    "x64"
                ]
            },
            "asarUnpack": [
                "./node_modules/sharp/**"
            ],
            "category": "Game",
            "icon": "icons/icon.png"
        }
    },
    "scripts": {
        "start": "concurrently --kill-others \"yarn run start:game\" \"yarn run start:electron\"",
        "start:game": "webpack serve --host \"0.0.0.0\" --port 8080 --inline --progress --profile --config webpack.config.js --name engine --mode=development",
        "start:electron": "webpack --config webpack.config.js --name electron --mode=development --progress && electron build/index.js",
        "build": "yarn run build:game && yarn run build:electron",
        "build:game": "webpack --config webpack.config.js --name engine --progress",
        "build:electron": "webpack --config webpack.config.js --name electron --progress",
        "pack": "yarn run pack:mac && yarn run pack:win && yarn run pack:linux",
        "pack:mac": "yarn run build && electron-builder --mac",
        "pack:win": "yarn run build && electron-builder --win",
        "pack:linux": "yarn run build && electron-builder --linux",
        "release": "sh __scripts/release.sh",
        "link:darker-engine": "yarn link darker-engine",
        "postinstall": "sh __scripts/postinstall.sh"
    },
    "devDependencies": {
        "@types/node": "18.6.5",
        "@types/uuid": "8.3.1",
        "concurrently": "6.5.1",
        "dayjs": "1.10.7",
        "electron": "16.0.5",
        "electron-builder": "22.14.5",
        "file-loader": "6.2.0",
        "html-webpack-plugin": "5.5.0",
        "node-loader": "2.0.0",
        "source-map-loader": "2.0.1",
        "ts-node": "9.1.1",
        "typescript": "4.2.3",
        "webpack-cli": "4.10.0",
        "webpack-dev-server": "3.11.2"
    },
    "dependencies": {
        "darker-engine": "3.0.5",
        "pixi.js": "6.2.1",
        "ts-loader": "8.1.0",
        "uuid": "8.3.2",
        "webpack": "5.72.0",
        "sharp": "0.30.7"
    }
}
